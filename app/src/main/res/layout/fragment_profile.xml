<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Picture -->
            <FrameLayout
                android:id="@+id/profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <View
                    android:id="@+id/purple_background"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:background="@color/pomp_power" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/account_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    android:layout_margin="8dp"
                    app:civ_border_color="@color/pomp_power"
                    android:src="@drawable/blank_profile_picture_973460" />

                <ImageView
                    android:id="@+id/editProfileIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_edit_24"
                    android:layout_marginRight="95dp"
                    android:layout_gravity="end|bottom"/>
            </FrameLayout>

            <!-- Username TextInputLayout -->
            <!-- Username TextInputLayout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/UsernamedisplayTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/profile_picture">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/UsernamedisplayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Username"
                    android:focusable="false"
                    android:clickable="false"
                    android:drawablePadding="8dp"
                    android:inputType="text"
                   />

            </com.google.android.material.textfield.TextInputLayout>



            <!-- Email TextInputLayout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EmaildisplayTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@id/UsernamedisplayTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EmaildisplayText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:focusable="false"
                    android:clickable="false"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                     />


            </com.google.android.material.textfield.TextInputLayout>


            <!-- Charges TextInputLayout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/chargeslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:theme="@style/MyTextInputLayout_overlay"
                android:layout_below="@id/EmaildisplayTextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Charges per hour(pkr)"
                    android:inputType="numberDecimal"
                    android:focusable="false"
                    android:clickable="false"
                    android:drawablePadding="8dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/editChargesIcon"
                android:background="@android:color/transparent"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_edit_24"
                android:layout_gravity="end|center_vertical"
                android:layout_alignBottom="@id/chargeslayout"
                android:layout_alignEnd="@id/chargeslayout"
                android:layout_marginEnd="8dp"
                android:paddingBottom="20dp"
                />


            <!-- Degree TextView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/degreelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_below="@+id/chargeslayout"
                android:layout_margin="10dp"
                app:cardCornerRadius="4dp">

                <!-- Parent LinearLayout to hold degree qualification and file icon section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Degree/Qualification TextView -->
                    <TextView
                        android:id="@+id/degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Degree/Qualification"
                        android:textStyle="bold"
                        android:padding="10dp" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/degree1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="4dp"
                        >
                        <View
                            android:id="@+id/cardview_background1"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/pomp_power" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <!-- Existing Headings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Degree"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                                <TextView
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Action"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <!-- TableLayout for displaying selected items -->
                            <TableLayout
                                android:id="@+id/selecteddegreeTable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <!-- Rows will be dynamically added here -->
                            </TableLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/degreelayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <Spinner
                              android:layout_weight="3"
                            android:id="@+id/degreeSpinner"
                            android:dropDownWidth="match_parent"
                            android:layout_width="wrap_content"
                            android:spinnerMode="dialog"
                            android:prompt="@string/spinner_prompt"
                            android:layout_height="wrap_content" />

                        <Button

                            android:id="@+id/submitButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/verdigris"
                            android:text="ADD" />

                    </LinearLayout>





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please upload valid degree/certification that qualifies you as a therapist"
                        android:textStyle="bold"
                        android:padding="10dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/file1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="4dp"
                        >
                        <View
                            android:id="@+id/cardview_background2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/pomp_power" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <!-- Existing Headings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Certificate"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                                <TextView
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Action"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <!-- TableLayout for displaying selected items -->
                            <TableLayout
                                android:id="@+id/selectedfileTable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <!-- Rows will be dynamically added here -->
                            </TableLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/uploadbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_background1"
                        android:textColor="@color/white"
                        android:text="Upload"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- Availability CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/availabilitylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/degreelayout"
                android:layout_margin="10dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="4dp">

                <!-- Parent LinearLayout to hold day, time fields, and button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Availability TextView -->
                    <TextView
                        android:id="@+id/availability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Availability"
                        android:textStyle="bold"
                        android:padding="10dp" />

                    <!-- Availability Fields -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/weeklyavail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="4dp"
                        >
                        <View
                            android:id="@+id/cardview_background"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/pomp_power" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <!-- Existing Headings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Day"
                                    android:textColor="@color/white"
                                    android:padding="10dp"
                                    android:layout_marginRight="20dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="From"
                                    android:padding="10dp"
                                    android:textColor="@color/white"
                                    android:layout_marginRight="20dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To"
                                    android:padding="10dp"
                                    android:textColor="@color/white"
                                    android:layout_marginRight="35dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Action"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <!-- TableLayout for displaying selected items -->
                            <TableLayout
                                android:id="@+id/selectedItemsTable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <!-- Rows will be dynamically added here -->
                            </TableLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Day and Time Fields -->
                    <LinearLayout
                        android:id="@+id/timinglayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <!-- Day Spinner -->
                        <Spinner
                            android:id="@+id/daySpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:spinnerMode="dialog"
                            android:prompt="@string/spinner_day"
                            android:entries="@array/days_of_week" />

                        <Spinner
                            android:id="@+id/startTimeSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="0dp"
                            android:spinnerMode="dialog"
                            android:prompt="@string/spinner_from"
                            />

                        <Spinner
                            android:id="@+id/endTimeSpinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                           android:padding="0dp"
                            android:spinnerMode="dialog"
                            android:prompt="@string/spinner_to"
                            android:entries="@array/endtimings" />

                        <!-- Button -->
                        <Button
                            android:id="@+id/submitButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADD"
                            android:layout_margin="2dp"
                            android:backgroundTint="@color/verdigris" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Paymentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_below="@+id/availabilitylayout"
                android:layout_margin="10dp"
                app:cardCornerRadius="4dp">

                <!-- Parent LinearLayout to hold degree qualification and file icon section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Degree/Qualification TextView -->
                    <TextView
                        android:id="@+id/Payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Details"
                        android:textStyle="bold"
                        android:padding="10dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="4dp"
                        >
                        <View
                            android:id="@+id/cardview_background6"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/pomp_power" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <!-- Existing Headings -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_weight="3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Account"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                                <TextView
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Action"
                                    android:textColor="@color/white"
                                    android:padding="10dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/accounttable"
                                >
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addaccountbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/round_background1"
                        android:textColor="@color/white"
                        android:text="ADD Account"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Save Changes Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:background="@drawable/roundpurplebutton"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Paymentlayout"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/pomp_power"
                android:text="Save Changes"
                />
            <TextView
                android:id="@+id/profilecompleteness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Profile Completeness:"
                android:textStyle="bold"
                android:layout_below="@id/saveButton"
                />
            <ProgressBar
                android:layout_marginTop="20dp"
                android:id="@+id/horizontalProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="6"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:progress="0"
                android:layout_below="@id/profilecompleteness"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/note1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontalProgressBar"
                android:text="*only completed profiles are shown to patients"
                android:textStyle="normal"
                android:layout_marginBottom="100dp"
                />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
