<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TherapistRegister">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/wave__6_" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/wave__5_"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="700"
            android:text="Create Account"
            android:textColor="@color/pomp_power"
            android:textSize="@dimen/font_size_xlarge"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameTextInputLayoutth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/MyTextInputLayout_overlay"
            app:boxCollapsedPaddingTop="-1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usernameEditTextth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/white"
                android:hint="Enter Username"
                android:inputType="text"
                android:maxLines="1"
                app:boxBackgroundColor="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTextInputLayoutth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/MyTextInputLayout_overlay"
            app:boxCollapsedPaddingTop="-1dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditTextth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"

                android:backgroundTint="@color/white"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                app:boxBackgroundColor="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextInputLayoutth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/MyTextInputLayout_overlay"
            app:boxCollapsedPaddingTop="-1dp"
            app:passwordToggleDrawable="@drawable/password_toggle_selector"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordEditTextth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/white"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:maxLines="1"
                app:boxBackgroundColor="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmpasswordTextInputLayoutth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/MyTextInputLayout_overlay"
            app:boxCollapsedPaddingTop="-1dp"
            app:passwordToggleDrawable="@drawable/password_toggle_selector"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmpasswordEditTextth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/white"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                app:boxBackgroundColor="@android:color/transparent" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerbtnth"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_background1"
            android:text="Register"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/linkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:onClick="login"
            android:text="Already have an account? Log in"
            android:textColor="@color/pomp_power"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/registrationProgressBarth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"

        android:visibility="invisible" />
</RelativeLayout>