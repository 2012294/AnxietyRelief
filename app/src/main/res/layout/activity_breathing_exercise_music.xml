<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BreathingExerciseMusic">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Background Music"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/pomp_power"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/OptionsLayout"
        android:layout_below="@id/textViewTitle"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/rainfallcardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/mint_green"
            android:elevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <!-- Text at the start -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rainfall Melody"
                    android:textColor="@color/black"/>

                <!-- Drawable at the end -->
                <ImageView
                    android:id="@+id/toggleIcon1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_circle_24"
                    android:layout_gravity="end|center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Second CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/OceanCardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/mint_green"
            android:elevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <!-- Text at the start -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coastal Harmony"
                    android:textColor="@android:color/black"/>

                <!-- Drawable at the end -->
                <ImageView
                    android:id="@+id/toggleIcon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_circle_24"
                    android:layout_gravity="end|center_vertical"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/RainforestBirsdsCardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/mint_green"
            android:elevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <!-- Text at the start -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jungle Chorus"
                    android:textColor="@android:color/black"/>

                <!-- Drawable at the end -->
                <ImageView
                    android:id="@+id/toggleIcon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_circle_24"
                    android:layout_gravity="end|center_vertical"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/waterfallCardview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/mint_green"
            android:elevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <!-- Text at the start -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Whispering Falls"
                    android:textColor="@android:color/black"/>

                <!-- Drawable at the end -->
                <ImageView
                    android:id="@+id/toggleIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_circle_24"
                    android:layout_gravity="end|center_vertical"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:background="@drawable/round_background1"
            android:backgroundTint="@color/pomp_power"
            android:text="Cancel"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:background="@drawable/round_background1"
            android:backgroundTint="@color/pomp_power"
            android:text="Save"/>
    </LinearLayout>

</RelativeLayout>
