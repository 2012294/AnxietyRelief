<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Theme_Affirmation_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theme Editing"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#FBF8F8"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wallpaper"
            android:layout_width="235dp"
            android:layout_height="417dp"
            android:layout_centerInParent="true"
            android:background="@drawable/affirmation_default_background"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Affirmation"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/colortab"
        android:layout_width="match_parent"
        android:elevation="5dp"

        android:visibility="gone"
        android:layout_height="45dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:gravity="center_vertical"
         android:padding="5dp"
         android:background="@color/grey"
         android:layout_height="match_parent">
         <HorizontalScrollView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:scrollbars="none"
             android:overScrollMode="never">

             <LinearLayout
                 android:layout_width="wrap_content"

                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <!-- Example Basic Colors -->
                 <ImageView
                     android:id="@+id/red"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"

                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/green"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"

                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/blue"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"

                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/yellow"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/black"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/white"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/lightpink"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />

                 <ImageView
                     android:id="@+id/mintgreen"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/skyblue"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/lavender"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/peach"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/grey"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/beige"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/taupe"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"

                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/ivory"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/charcoal"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/orange"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/turquoise"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/magenta"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/limegreen"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />
                 <ImageView
                     android:id="@+id/cyan"
                     android:layout_width="34dp"
                     android:layout_height="35dp"
                     android:layout_marginRight="8dp"
                     android:clickable="true"
                     />

             </LinearLayout>
         </HorizontalScrollView>
     </LinearLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:textSize="15sp"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Change"/>
            <LinearLayout
               android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:id="@+id/background"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_wallpaper_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Library"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    <View
                        android:id="@+id/activebackground"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:visibility="gone"
                        android:background="@color/black"/>
                </LinearLayout>

                <!-- Icon with Text 2 -->
                <LinearLayout
                    android:id="@+id/textcolor"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_format_color_text_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Text Color"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    <View
                        android:id="@+id/activetextcolor"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"/>
                </LinearLayout>

                <!-- Icon with Text 3 -->
                <LinearLayout
                    android:id="@+id/default1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_autorenew_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                    <View
                        android:id="@+id/activedefault"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
        android:layout_gravity="end"
        android:background="@drawable/round_background1"
        android:textColor="@color/white"
        android:text="Cancel"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
        android:layout_gravity="end"
        android:background="@drawable/round_background1"
        android:textColor="@color/white"
        android:text="Save"/>
    </LinearLayout>


</LinearLayout>