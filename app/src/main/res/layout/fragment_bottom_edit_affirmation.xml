<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottom_add_affirmation">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/verdigris"
        android:text="Add New Affirmation"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/quoteTextInputLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:boxCollapsedPaddingTop="-0.3dp"
        android:theme="@style/MyTextInputLayout_overlay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quoteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My new quote"
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btndone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background1"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:textColor="@color/white"
        android:text="Done"/>

</LinearLayout>

