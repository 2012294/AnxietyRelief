<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Patient_ui.Affirmation.AffirmationFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="30dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/pomp_power"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="160dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/selflove"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/selflove"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Self Love"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:id="@+id/health"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/health"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"

                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Health"
                            android:textSize="17sp"

                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="160dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/success"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/success"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Success"
                            android:textSize="17sp"

                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/generalpositivity"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/positivity"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"

                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="General Positivity"
                            android:textSize="17sp"

                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"

            android:layout_height="160dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/fav"
                android:layout_width="150dp"
                android:layout_marginRight="10dp"
                android:layout_height="150dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/fav"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Favorites"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ownAffirmation"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/write" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/mint_green"
                        android:layout_width="match_parent"

                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My Affirmations"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/pomp_power"
                            android:gravity="center|top"

                            />


                    </LinearLayout></LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="5dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/theme"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="10dp"

            android:background="@drawable/toproundbackground"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_add_photo_alternate_24"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affirmation Theme"
                android:textSize="17sp"
                 android:layout_gravity="center"
                android:textColor="@color/pomp_power"
                 />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>