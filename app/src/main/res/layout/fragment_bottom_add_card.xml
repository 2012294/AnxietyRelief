<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomAddCard">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="15dp"


       android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/verdigris"
          android:text="Card number"
          />
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/cardNumberInputLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"

          android:layout_marginTop="20dp"
          app:boxCollapsedPaddingTop="-0.3dp"
          android:theme="@style/MyTextInputLayout_overlay">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/cardNumberEditText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter Number"
             app:boxBackgroundColor="@android:color/transparent"
             android:background="@android:color/transparent"
             android:inputType="number"
             android:digits="0123456789 -"
             android:maxLines="1"
             android:maxLength="19" />

      </com.google.android.material.textfield.TextInputLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Expire Time"
          android:textColor="@color/verdigris"
          android:layout_marginTop="20dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:orientation="horizontal">
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:id="@+id/monthInputLayout"
             android:layout_marginRight="5dp"
             app:boxCollapsedPaddingTop="-0.3dp"
             android:layout_weight="1"
             android:theme="@style/MyTextInputLayout_overlay">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/monthEditText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter Month"
             app:boxBackgroundColor="@android:color/transparent"
             android:background="@android:color/transparent"
             android:inputType="number"
             android:maxLines="1"
             android:maxLength="2" />
         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_weight="1"
             android:id="@+id/yearInputLayout"
             android:layout_marginLeft="5dp"
             app:boxCollapsedPaddingTop="-0.3dp"
             android:theme="@style/MyTextInputLayout_overlay">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/yearEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Year"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="4" />
         </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:textColor="@color/verdigris"
          android:text="Card holder"
          />
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:id="@+id/cardnameInputLayout"
          app:boxCollapsedPaddingTop="-0.3dp"
          android:theme="@style/MyTextInputLayout_overlay">

         <com.google.android.material.textfield.TextInputEditText
             android:id="@+id/cardnameEditText"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter Name"
             app:boxBackgroundColor="@android:color/transparent"
             android:background="@android:color/transparent"
             android:inputType="text"
             android:maxLines="1"
              />

      </com.google.android.material.textfield.TextInputLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CVV"
          android:textColor="@color/verdigris"
          android:layout_marginTop="20dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:id="@+id/cvvInputLayout"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_marginRight="5dp"
             app:boxCollapsedPaddingTop="-0.3dp"
             android:layout_weight="1"

             android:theme="@style/MyTextInputLayout_overlay">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cvvEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter CVV"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="3" />
         </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="300dp"
           android:layout_weight="1"
           android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
           android:text="The last three digits on the back of yourcard"/>

      </LinearLayout>
      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btndone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/round_background1"
          android:layout_marginTop="20dp"
          android:layout_gravity="end"
          android:textColor="@color/white"
          android:text="Done"/>

   </LinearLayout>

</FrameLayout>