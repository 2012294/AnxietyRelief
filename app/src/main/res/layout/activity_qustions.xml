<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/french_grey"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".Questions_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Question 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How often do you feel restless or on edge?"
                android:textSize="18sp"
          android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 1 -->
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 1 -->
                <RadioButton
                    android:id="@+id/option1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never"/>

                <RadioButton
                    android:id="@+id/option2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasionally"/>

                <RadioButton
                    android:id="@+id/option3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequently"/>

                <RadioButton
                    android:id="@+id/option4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almost always"/>
            </RadioGroup>

            <!-- Question 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have trouble falling asleep due to worrying thoughts?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 2 -->
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 2 -->
                <RadioButton
                    android:id="@+id/option1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>

                <RadioButton
                    android:id="@+id/option2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sometimes"/>

                <RadioButton
                    android:id="@+id/option3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Often"/>

                <RadioButton
                    android:id="@+id/option4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always"/>
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you describe your ability to concentrate on tasks?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 3 -->
            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 3 -->
                <RadioButton
                    android:id="@+id/option1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Excellent"/>

                <RadioButton
                    android:id="@+id/option2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"/>

                <RadioButton
                    android:id="@+id/option3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fair"/>

                <RadioButton
                    android:id="@+id/option4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor"/>
            </RadioGroup>

            <!-- Question 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How often do you experience physical symptoms of anxiety (e.g., sweating, trembling)?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 4 -->
            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 4 -->
                <RadioButton
                    android:id="@+id/option1_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>

                <RadioButton
                    android:id="@+id/option2_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasionally"/>

                <RadioButton
                    android:id="@+id/option3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequently"/>

                <RadioButton
                    android:id="@+id/option4_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constantly"/>
            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you easily irritable or agitated?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 5 -->
            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 5 -->
                <RadioButton
                    android:id="@+id/option1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>

                <RadioButton
                    android:id="@+id/option2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sometimes"/>

                <RadioButton
                    android:id="@+id/option3_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Often"/>

                <RadioButton
                    android:id="@+id/option4_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always"/>
            </RadioGroup>

            <!-- Repeat similar structure for Question 6 to Question 10 -->

            <!-- Question 6 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How often do you avoid situations or activities due to anxiety?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 6 -->
            <RadioGroup
                android:id="@+id/radioGroup6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 6 -->
                <RadioButton
                    android:id="@+id/option1_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never"/>

                <RadioButton
                    android:id="@+id/option2_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasionally"/>

                <RadioButton
                    android:id="@+id/option3_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequently"/>

                <RadioButton
                    android:id="@+id/option4_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almost always"/>
            </RadioGroup>

            <!-- Repeat similar structure for Question 7 to Question 10 -->

            <!-- Question 7 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you often feel a sense of impending doom or danger?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 7 -->
            <RadioGroup
                android:id="@+id/radioGroup7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 7 -->
                <RadioButton
                    android:id="@+id/option1_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>

                <RadioButton
                    android:id="@+id/option2_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sometimes"/>

                <RadioButton
                    android:id="@+id/option3_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Often"/>

                <RadioButton
                    android:id="@+id/option4_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always"/>
            </RadioGroup>

            <!-- Repeat similar structure for Question 8 to Question 10 -->

            <!-- Question 8 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you rate your overall stress level?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 8 -->
            <RadioGroup
                android:id="@+id/radioGroup8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 8 -->
                <RadioButton
                    android:id="@+id/option1_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"/>

                <RadioButton
                    android:id="@+id/option2_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderate"/>

                <RadioButton
                    android:id="@+id/option3_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"/>

                <RadioButton
                    android:id="@+id/option4_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very high"/>
            </RadioGroup>

            <!-- Question 9 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you experience muscle tension or headaches related to stress?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 9 -->
            <RadioGroup
                android:id="@+id/radioGroup9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 9 -->
                <RadioButton
                    android:id="@+id/option1_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>

                <RadioButton
                    android:id="@+id/option2_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sometimes"/>

                <RadioButton
                    android:id="@+id/option3_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Often"/>

                <RadioButton
                    android:id="@+id/option4_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Constantly"/>
            </RadioGroup>

            <!-- Question 10 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How often do you engage in relaxation techniques to manage stress?"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- RadioGroup for Question 10 -->
            <RadioGroup
                android:id="@+id/radioGroup10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Options for Question 10 -->
                <RadioButton
                    android:id="@+id/option1_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily"/>

                <RadioButton
                    android:id="@+id/option2_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"/>

                <RadioButton
                    android:id="@+id/option3_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occasionally"/>

                <RadioButton
                    android:id="@+id/option4_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rarely"/>
            </RadioGroup>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Done"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
