<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/mint_green"
    android:layout_height="match_parent"
    tools:context=".Chat_therapist_activity">

    <!-- Top Layout for Name, Online Status, and Timer -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topLayout"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/pomp_power"
            android:padding="15dp">

            <!-- Name and Online Status LinearLayout -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name TextView -->
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- Online Status TextView -->
                <TextView
                    android:id="@+id/onlineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="Online"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Timer TextView -->
            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chat ListView -->
    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topLayout"
        android:layout_above="@+id/messageContainer"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:padding="8dp"
        android:transcriptMode="alwaysScroll" />

    <!-- Message Container -->
    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- CardView for Message EditText -->


        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Type your message..."
            android:padding="15dp"
            android:textColorHint="@color/gray"


            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:imeOptions="actionSend"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/black"

            android:background="@drawable/receiver_message_background" />


        <!-- Send Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_marginLeft="5dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/pomp_power"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/sendbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/baseline_send_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
