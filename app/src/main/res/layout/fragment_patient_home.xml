<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Patient_ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:background="@drawable/profile_top_background"
                android:layout_height="190dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginRight="7dp"/>
                    <TextView
                        android:id="@+id/usernametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="!!!"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"



                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:text="We're here to support you on your anxiety relief journey. "/>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="310dp"
                    android:layout_height="200dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"



                    app:cardCornerRadius="20dp">
                  <androidx.appcompat.widget.LinearLayoutCompat
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
                      <TextView
                          android:padding="12dp"
                          android:gravity="center"
                          android:textSize="@dimen/text_size_large"
                          android:textStyle="bold"

                          android:textColor="@color/pomp_power"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Current Wellness Level"/>



                          <!-- Horizontal Progress Bar -->
                          <ProgressBar
                              android:layout_marginTop="20dp"
                              android:id="@+id/horizontalProgressBar"
                              style="?android:attr/progressBarStyleHorizontal"
                              android:layout_width="match_parent"
                              android:layout_height="10dp"
                              android:max="4"
                              android:layout_marginRight="10dp"
                              android:layout_marginLeft="10dp"
                              android:progress="0"
                              android:progressDrawable="@drawable/custom_progress_bar"
                              android:layout_marginBottom="8dp"/>

                          <!-- Labels -->
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:gravity="center">

                              <TextView
                                  android:id="@+id/lowLabel"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:text="Low"
                                  android:textColor="@color/pomp_power"
                                  android:textAlignment="center" />

                              <TextView
                                  android:id="@+id/mildLabel"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:textColor="@color/pomp_power"
                                  android:text="Mild"

                                  android:textAlignment="center" />

                              <TextView
                                  android:id="@+id/moderateLabel"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"

                                  android:textColor="@color/pomp_power"
                                  android:text="Moderate"
                                  android:textAlignment="center" />

                              <TextView
                                  android:textColor="@color/pomp_power"
                                  android:id="@+id/highLabel"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:text="High"
                                  android:textAlignment="center" />
                          </LinearLayout>

                      <TextView
                          android:id="@+id/testing"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                      <TextView
                          android:id="@+id/anxietylevelLink"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="bottom"
                          android:padding="13dp"
                          android:text="To update,Click here"
                          android:textSize="@dimen/text_size_medium"

                          android:textColor="@color/pomp_power"
                          android:clickable="true"
                          />
                  </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"



                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="12dp"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"

                            android:textColor="@color/pomp_power"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upcomming sessions"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/underline"
                            android:textStyle="bold"

                            android:padding="13dp"
                            android:text="Chat Sessions"


                            android:textSize="@dimen/text_size_medium"

                            android:textColor="@color/pomp_power"

                            />
                        <TableLayout
                            android:id="@+id/chatsessiontable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="13dp"
                            android:id="@+id/nosessionchat"
                                android:visibility="gone"
                            android:text="no upcomming Chat Sessions"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/pomp_power"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/underline"
                            android:textStyle="bold"

                            android:padding="13dp"
                            android:text="Video Sessions"

                            android:textSize="@dimen/text_size_medium"

                            android:textColor="@color/pomp_power"

                            />
                        <TableLayout
                            android:id="@+id/videosessiontable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            ></TableLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="13dp"
                            android:id="@+id/nosessionvideo"
                            android:visibility="gone"
                            android:text="no upcomming Video Sessions"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/pomp_power"

                            />



                    </LinearLayout>





                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="wrap_content"

                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"



                    app:cardCornerRadius="20dp">
                    <TextView
                        android:padding="12dp"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"

                        android:textColor="@color/pomp_power"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discover Our Tools"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/BreathignExercisesCardView"
                    android:layout_width="310dp"
                    android:layout_height="380dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/breadthing"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/mint_green"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Breathing Exercises"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:textColor="@color/pomp_power"
                                android:gravity="center|top"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/pomp_power"
                                android:text="Dive into a collection of breathing exercises that help you manage stress and anxiety with ease."
                                android:gravity="center"
                                android:textAlignment="center"

                                />
                        </LinearLayout></LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/journalingcardview"
                    android:layout_width="310dp"
                    android:layout_height="450dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:src="@drawable/journalling"
                            android:background="@color/white"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/mint_green"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Journaling"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:textColor="@color/pomp_power"
                                android:gravity="center|top"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/pomp_power"
                                android:text=" Express your thoughts and emotions through digital journaling, a therapeutic practice for self-reflection and personal growth."
                                android:gravity="center"
                                android:textAlignment="center"

                                />
                        </LinearLayout></LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:layout_height="380dp"
                    android:id="@+id/affirmationCardView"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/affirmation"
                            />

                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/mint_green"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Affirmation"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:textColor="@color/pomp_power"
                                android:gravity="center|top"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/pomp_power"
                                android:text="Explore a collection of empowering affirmations for daily inspiration and motivation."
                                android:gravity="center"
                                android:textAlignment="center"

                                />
                        </LinearLayout></LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Findtherapistcardview"
                    android:layout_width="310dp"
                    android:layout_height="380dp"
                    app:cardElevation="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="40dp"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/choosetherapist"
                            />

                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@color/mint_green"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:layout_weight="2.5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Find Therapist"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:textColor="@color/pomp_power"
                                android:gravity="center|top"

                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/pomp_power"
                                android:text="Connect with professional therapists and take the first step towards your mental well-being journey."
                                android:gravity="center"
                                android:textAlignment="center"

                                />
                        </LinearLayout></LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>