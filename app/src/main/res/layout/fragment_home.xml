<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".UpCommingSession_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UpComing Sessions"
                android:textColor="@color/pomp_power"
                android:textSize="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:textStyle="bold"

                android:padding="13dp"
                android:text="Chat Sessions"


                android:textSize="@dimen/text_size_medium"

                android:textColor="@color/pomp_power"

                />
            <TableLayout
                android:id="@+id/chatsessiontable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:id="@+id/nosessionchat"
                android:visibility="gone"
                android:text="no upcomming Chat Sessions"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/pomp_power"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:textStyle="bold"

                android:padding="13dp"
                android:text="Video Sessions"

                android:textSize="@dimen/text_size_medium"

                android:textColor="@color/pomp_power"

                />
            <TableLayout
                android:id="@+id/videosessiontable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ></TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:id="@+id/nosessionvideo"
                android:visibility="gone"
                android:text="no upcomming Video Sessions"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/pomp_power"

                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>