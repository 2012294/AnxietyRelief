<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerid">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find your Therapist"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Search Input -->
    <RelativeLayout
        android:id="@+id/relativeLayout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_title"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/editText_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ” Search Therapist"
            android:padding="12dp"
            android:layout_toStartOf="@id/button_filter"
            android:layout_toLeftOf="@id/button_filter"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            android:inputType="text"/>

        <ImageButton
            android:id="@+id/button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_filter_alt_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:tint="@color/pomp_power" />

    </RelativeLayout>

    <!-- RecyclerView to display therapist cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_therapists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relativeLayout_search"
        android:padding="16dp"/>

</RelativeLayout>
