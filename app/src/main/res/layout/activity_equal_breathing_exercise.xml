<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EqualBreathingExercise">





        <TextView
            android:id="@+id/TextCycles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/circularCardView"
            android:textSize="20sp"
            android:textColor="@color/pomp_power"
            android:layout_margin="10dp"
        />




    <androidx.cardview.widget.CardView
        android:id="@+id/circularCardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="100dp"
        app:cardBackgroundColor="@color/mint_blue_green"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/countdownTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="@color/pomp_power" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/circularCardView"
        android:id="@+id/relaxationMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="@color/pomp_power"
        android:text=""
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/replayCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/mint_blue_green"
        android:layout_margin="20dp"
        android:elevation="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/replayIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_replay_24"
                android:layout_marginRight="10dp"
                android:tint="@color/black"/>

            <TextView
                android:id="@+id/replayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replay"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stopCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/mint_blue_green"
        android:layout_margin="20dp"
        android:elevation="5dp"

        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/buttonicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_stop_24"
                android:layout_marginRight="10dp"
                android:tint="@color/red"/>

            <TextView
                android:id="@+id/buttontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
